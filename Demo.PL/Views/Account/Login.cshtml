@model LoginViewModel


@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All"></div> @*to Show Errors*@

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login" method="post">
			<input class="text" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGN IN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password ? </a></p>

	</div>
</div>

@*Server Side Validation*@
@section validationScriptSection {
	@*PartialView for Client Side Validation*@
	<partial name="_ValidationScriptsPartial" />
}

