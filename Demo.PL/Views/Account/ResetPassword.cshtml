@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">

		<form asp-action="ResetPassword" method="post">
			<input class="text" asp-for="NewPassword" placeholder="New Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
			<input type="submit" value="RESET">
		</form>

	</div>
</div>

@*Server Side Validation*@
@section validationScriptSection {
	@*PartialView for Client Side Validation*@
	<partial name="_ValidationScriptsPartial" />
}

