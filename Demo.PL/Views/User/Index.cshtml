@model IEnumerable<UserViewModel>


@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<br />
<br />
@*Search Function*@
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-3">
        <div class="col-8">
            <input type="text" class="form-control" name="email" placeholder="Search By Name...." />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </form>

</div>

@*lw ana fe action w hro7 3la action tany fe nafs el controller f ana m4 m7atg aktb asp-controller=""*@
@*asp-route-id="@Employee.Id" ==> 3l4an ya5od el id bta3 el dept lly hygeb el bayanat bta3to*@
@if (Model.Count() > 0)
{
    <table class="mt-3 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.FName)</td>
                <td>@Html.DisplayNameFor(U => U.LName)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => user.Id)</td>
                    <td>@Html.DisplayFor(M => user.FName)</td>
                    <td>@Html.DisplayFor(M => user.LName)</td>
                    <td>@Html.DisplayFor(M => user.Email)</td>
                    <td>@Html.DisplayFor(M => user.PhoneNumber)</td>
                    <td>@string.Join(" " , user.Roles)</td>

                @*PartialView*@
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
                
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>There is No Users !</h3>
    </div>
}
