@model Department

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<br />
<br />

<form asp-action="Edit">
    <div asp-validation-summary="All"></div> @*List the Whole Error Messages*@
    <div class="form-group">
        <label class="col col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span> @*Validation Error*@
    </div>
    <div class="form-group">
        <label class="col col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span> @*Validation Error*@
    </div>
    <div class="form-group">
        <label class="col col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span> @*Validation Error*@
    </div>

    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-dark">Back To List</a>
</form>

@section validationScriptSection {
    @*PartialView for Client Side Validation*@
    <partial name="_ValidationScriptsPartial" />
}


